          <small class="text-muted mx-1">Logut from all other devices.</small>
        </div>
      </div>
    </aside>
    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
      <div class="message-div px-3" style="top: 30px !important; position: relative"></div>
      <div class="spinner d-none" role="status">
        <span class="sr-only">Loading...</span>
      </div>
      <!--Modal: modalEditLink-->
      <div
        class="modal fade"
        id="modalEditLink"
        tabindex="-1"
        role="dialog"
        aria-labelledby="modalEditLink"
        aria-hidden="true"
      >
        <div id="shortIdInputDiv"></div>
        <div class="modal-dialog modal-md modal-notify modal-primary" role="document">
          <!--Content-->
          <div class="modal-content text-center">
            <!--Header-->
            <div class="modal-header">
              <h5 class="text-primary" id="myModalLabel">Link Edit</h5>
              <button type="button" class="btn" data-dismiss="modal" aria-label="Close">
                <svg xmlns="http://www.w3.org/2000/svg" height="16" width="12" viewBox="0 0 384 512">
                  <path
                    d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"
                  />
                </svg>
              </button>
            </div>

            <!--Body-->
            <div class="modal-body">
              <div class="form-group">
                <span>
                  <img src="/assets/img/link.png" class="avatar-xs me-3 border-radius-lg link-logo" alt="link" />
                </span>
                <input class="form-field" id="url" type="url" placeholder="https://example.com" />
              </div>

              <div class="mt-3 ps-0">
                <div style="float: left">
                  <label class="form-check-label text-dark text-md" for="flexSwitchCheckDefault"
                    >Link Status</label
                  >
                </div>
                <div style="float: right">
                  <select class="ms-auto mt-1" id="linkStatus">
                    <option value="running">Running</option>
                    <option value="offline">Offline</option>
                  </select>
                </div>
                <!-- <select class="ms-auto mt-1" id="linkSwitch" >Disable</select> -->
                <!-- <input class="ms-auto mt-1" type='checkbox' id="linkSwitch" /> -->
              </div>
            </div>

            <!--Footer-->
            <div class="modal-footer flex-center">
              <div class="spinner-div d-none mb-3 mx-2" style="color: #f44335" role="status">
                <span class="sr-only">Loading...</span>
              </div>
              <button type="button" id="update-link-btn" class="btn btn-danger waves-effect">Save</button>
              <button type="button" id="delete-link-btn" class="btn btn-outline-danger">Delete Link</button>
            </div>
            <div class="modal-msg-div"></div>
          </div>
          <!--/.Content-->
        </div>
      </div>
      <!-- Navbar -->
      <nav
        class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl"
        id="navbarBlur"
        data-scroll="true"
      >
        <div class="container-fluid py-1 px-3">
          <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
            <div class="ms-md-auto pe-md-3 d-flex align-items-center"></div>
            <ul class="navbar-nav justify-content-end">
              <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
                <a href="javascript:;" class="nav-link text-body p-0" id="iconNavbarSidenav">
                  <div class="sidenav-toggler-inner">
                    <i class="sidenav-toggler-line"></i>
                    <i class="sidenav-toggler-line"></i>
                    <i class="sidenav-toggler-line"></i>
                  </div>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <!-- End Navbar -->
      <div class="container-fluid py-4">
        <!-- <div class="message-div px-4"></div> -->
        <% if (!data.length) { %>
        <div class="d-flex align-items-center justify-content-center" style="height: 590px">
          <img width="600" height="600" class="img-fluid" src="/assets/img/no-links.png" alt="no-links" />
        </div>
        <%} else { %>
        <div class="row">
          <div class="col-12">
            <div class="card my-4">
              <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                  <h6 class="text-white text-capitalize ms-3 ps-3">
                    <img src="/assets/img/link-2.gif" class="avatar-sm me-3 border-radius-lg" alt="link-logo" />
                    L I N K S
                  </h6>
                </div>
              </div>
              <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">
                  <table class="table align-items-center mb-0">
                    <thead>
                      <tr>
                        <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-9">Link</th>
                        <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-9 ps-2">
                          Original Link
                        </th>
                        <th class="text-center text-uppercase text-secondary text-xs font-weight-bolder opacity-9">
                          Clicks
                        </th>
                        <th class="text-center text-uppercase text-secondary text-xs font-weight-bolder opacity-9">
                          Status
                        </th>
                        <th class="text-center text-uppercase text-secondary text-xs font-weight-bolder opacity-9">
                          Created At
                        </th>
                        <th class="text-secondary opacity-7"></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% data.forEach((d,i) => { %>
                      <tr class="link-row-id-<%- d.shortId %>">
                        <td class="link-logo-data">
                          <div class="d-flex px-2 py-1">
                            <div>
                              <img
                                src="/assets/img/link.png"
                                class="avatar-md me-3 border-radius-lg link-logo"
                                data-bs-toggle="tooltip"
                                data-bs-placement="top"
                                title="Copy link"
                                alt="link"
                              />
                              <input type="hidden" name="shortId" value="<%- d.shortId %>" />
                            </div>
                            <div class="d-flex flex-column justify-content-center">
                              <h6
                                class="mb-0 text-sm"
                                data-bs-toggle="tooltip"
                                data-bs-placement="top"
                                title="Click to open in new tab"
                              >
                                <% if (!d.status) { %>
                                <a class="link short-id-<%- d.shortId %> text-secondary" target="_blank"
                                  >Loading</a
                                >
                                <%} else { %>
                                <a class="link short-id-<%- d.shortId %>" target="_blank">Loading</a>
                                <% } %>
                              </h6>
                            </div>
                          </div>
                        </td>
                        <td class="original-link">
                          <p
                            class="link-wrap text-xs font-weight-bold mb-0"
                            data-bs-toggle="tooltip"
                            data-bs-placement="top"
                            title="<%= d.redirectUrl %>"
                          >
                            <a target="_blank" href="<%= d.redirectUrl %>"><%= d.redirectUrl %></a>
                          </p>
                        </td>
                        <td class="align-middle text-center">
                          <span class="text-secondary text-xs font-weight-bold"><%= d.visitHistory.length %></span>
                        </td>
                        <td class="align-middle text-center text-sm">
                          <% if (d.status) { %>
                          <span class="badge badge-sm bg-gradient-success link-status">Running</span>
                          <%} else { %>
                          <span class="badge badge-sm bg-gradient-secondary link-status">Offline</span>
                          <% } %>
                        </td>
                        <td class="align-middle text-center">
                          <!-- <span class="text-secondary text-xs font-weight-bold">23/04/18</span> -->
                          <span class="text-secondary text-xs font-weight-bold"><%= d.createdAt %></span>
                        </td>
                        <td class="align-middle">
                          <button
                            type="button"
                            class="edit-link-btn btn my-2 text-secondary text-xs"
                            data-toggle="modal"
                            data-target="#modalEditLink"
                          >
                            Edit
                          </button>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
        <footer class="footer py-4">
          <div class="container-fluid">
            <div class="row align-items-center justify-content-lg-between">
              <div class="col-lg-6 mb-lg-0 mb-4">
                <div class="copyright text-center text-sm text-dark text-lg-start">
                  ©
                  <script>
                    document.write(new Date().getFullYear());
                  </script>
                  made with <i class="fa fa-heart"></i> by BITE LINK
                </div>
              </div>
              <div class="col-lg-6">
                <ul class="nav nav-footer justify-content-center justify-content-lg-end">
                  <li class="nav-item">
                    <a href="#" class="nav-link text-dark" target="_blank">About Us</a>
                  </li>
                  <li class="nav-item">
                    <a href="https://www.creative-tim.com/blog" class="nav-link text-dark" target="_blank">Blog</a>
                  </li>
                  <li class="nav-item">
                    <a href="https://www.creative-tim.com/license" class="nav-link pe-0 text-dark" target="_blank"
                      >License</a
                    >
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </footer>
      </div>
    </main>
    <!--   Core JS Files   -->
    <script src="/js/core/popper.min.js"></script>
    <script src="/js/core/bootstrap.min.js"></script>
    <script src="/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="/js/plugins/smooth-scrollbar.min.js"></script>
