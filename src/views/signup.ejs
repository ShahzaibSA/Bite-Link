<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Sign Up</title>
    <link type="image/png" rel="icon" href="/assets/img/logo.svg" />

    <!-- Font Icon -->
    <link rel="stylesheet" href="/fonts/material-icon/css/material-design-iconic-font.min.css" />

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/css/styles.css" rel="stylesheet" />
    <!-- Fonts CSS-->
    <link rel="stylesheet" href="/css/heading.css" />
    <link rel="stylesheet" href="/css/body.css" />

    <!-- Main css -->
    <link rel="stylesheet" href="/css/style.css" />

    <script src="/js/main.js" defer></script>
  </head>
  <body class="html-body">
    <div class="spinner d-none" role="status">
      <span class="sr-only">Loading...</span>
    </div>
    <nav class="navbar navbar-expand-lg fixed-top" id="mainNav">
      <div>
        <img src="/assets/img/logo.svg" alt="logo" />
        <span>BITE LINK</span>
      </div>
    </nav>
    <div class="body-container">
      <!-- Sign up  Form -->
      <section class="sign-up">
        <div class="message-div"></div>
        <div class="container">
          <div class="signin-content">
            <div class="signup-form" style="margin-top: 2vh">
              <h2 class="form-title">Sign Up</h2>
              <form class="register-form" id="register-form">
                <div class="form-group">
                  <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                  <input
                    required
                    type="text"
                    name="fullName"
                    id="fullName"
                    autocomplete="off"
                    placeholder="Full Name"
                    onkeypress="return blockSpecialChar(event)"
                  />
                </div>
                <div class="form-group">
                  <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                  <input
                    required
                    id="name"
                    type="text"
                    name="username"
                    autocomplete="off"
                    placeholder="Username"
                    onkeypress="return blockSpecialChar(event)"
                  />
                </div>
                <div class="form-group">
                  <label for="email"><i class="zmdi zmdi-email"></i></label>
                  <input required type="email" name="email" id="email" placeholder="Email" />
                </div>
                <div class="form-group">
                  <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                  <input required type="password" name="password" id="pass" placeholder="Password" />
                </div>
                <div class="d-flex d-inline">
                  <div class="form-group form-button">
                    <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                  </div>
                </div>
              </form>
            </div>
            <div class="signin-image py-4">
              <figure><img src="/assets/img/signup-image.jpg" alt="sign up image" /></figure>
              <a href="/login" class="signup-image-link">I am already member</a>
            </div>
          </div>
        </div>
      </section>
    </div>

    <!-- Bootstrap JS -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
      integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <!-- <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script> -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
      crossorigin="anonymous"
    ></script>
    <script>
      var win = navigator.platform.indexOf('Win') > -1;
      if (win && document.querySelector('#sidenav-scrollbar')) {
        var options = {
          damping: '0.5'
        };
        Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
      }
    </script>
  </body>
